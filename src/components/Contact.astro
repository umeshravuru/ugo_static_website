<section id="contact" class="section bg-white">
  <div class="container mx-auto">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-white rounded-lg shadow-xl p-8" data-aos="fade-right">
        <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>
        <p class="text-neutral-700 mb-8">
          Have a project in mind or questions about our services? Fill out the form below and we'll get back to you promptly.
        </p>
        
        <form id="contact-form" class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="label">Full Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="input" 
                placeholder="John Doe" 
                required
              />
            </div>
            <div>
              <label for="email" class="label">Email Address</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="input" 
                placeholder="john@example.com" 
                required
              />
            </div>
          </div>
          
          <div>
            <label for="company" class="label">Company Name</label>
            <input 
              type="text" 
              id="company" 
              name="company" 
              class="input" 
              placeholder="Your Company Inc."
            />
          </div>
          
          <div>
            <label for="service" class="label">Interested Service</label>
            <select id="service" name="service" class="input">
              <option value="">Select a service</option>
              <option value="cloud-solutions">Cloud Solutions</option>
              <option value="cybersecurity">Cybersecurity</option>
              <option value="software-development">Software Development</option>
              <option value="it-strategy">IT Strategy</option>
              <option value="digital-transformation">Digital Transformation</option>
              <option value="managed-it">Managed IT Services</option>
              <option value="other">Other (Please specify)</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="label">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              class="input" 
              placeholder="Tell us about your project or inquiry"
              required
            ></textarea>
          </div>
          
          <div>
            <button 
              type="submit" 
              class="btn btn-primary w-full md:w-auto"
              onclick="return false"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
      
      <!-- Contact Information -->
      <div data-aos="fade-left">
        <h2 class="text-3xl font-bold mb-6">Contact Information</h2>
        <p class="text-neutral-700 mb-8">
          We'd love to hear from you. Contact us directly or use the form to start a conversation about your IT needs.
        </p>
        
        <div class="space-y-6 mb-8">
          <div class="flex items-start">
            <div class="bg-primary-100 p-3 rounded-full mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
