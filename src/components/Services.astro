---

<section id="services" class="section bg-white">
  <div class="container mx-auto">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Services</h2>
      <div class="w-24 h-1 bg-primary-600 mx-auto mb-6"></div>
      <p class="text-xl text-neutral-700">
        We provide comprehensive IT solutions to help your business thrive in the digital landscape.
        Our expertise spans across various domains of information technology.
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <div 
          id={service.id}
          class="card p-8 bg-white hover-lift group"
          data-aos="fade-up"
          data-aos-delay={service.delay}
        >
          <div class="mb-6 text-primary-600 transition-transform duration-300 group-hover:scale-110 group-hover:text-primary-700" set:html={service.icon} />
          <h3 class="text-2xl font-bold mb-4">{service.title}</h3>
          <p class="text-neutral-700">{service.description}</p>
          <a href={`#${service.id}-details`} class="inline-flex items-center mt-4 text-primary-600 font-medium hover:text-primary-800 transition-colors">
            Learn more
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="mt-16 text-center" data-aos="fade-up" data-aos-delay="700">
      <p class="text-xl mb-6">Need a custom solution for your business?</p>
      <a href="#contact" class="btn btn-primary">
        Contact Our Team
      </a>
    </div>
  </div>
</section>