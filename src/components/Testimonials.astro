---
const testimonials = [
  {
    id: 1,
    quote: "UGO Tech transformed our IT infrastructure. Their cloud migration strategy reduced our costs while improving performance. The team was professional and responsive throughout the entire process.",
    author: "Sarah Johnson",
    position: "CTO, FinTech Solutions",
    image: "https://images.pexels.com/photos/762020/pexels-photo-762020.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    rating: 5
  },
  {
    id: 2,
    quote: "Working with UGO Tech has been a game-changer for our cybersecurity posture. Their team identified vulnerabilities we weren't aware of and implemented robust security measures that have protected us from threats.",
    author: "Michael Chen",
    position: "IT Director, HealthPlus",
    image: "https://images.pexels.com/photos/697509/pexels-photo-697509.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    rating: 5
  },
  {
    id: 3,
    quote: "The custom software solution UGO Tech developed for us has streamlined our operations and increased productivity by 40%. Their team took the time to understand our business needs and delivered a solution that exceeded our expectations.",
    author: "Jessica Moore",
    position: "Operations Manager, Global Manufacturing",
    image: "https://images.pexels.com/photos/1937434/pexels-photo-1937434.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    rating: 5
  }
];
---

<section id="testimonials" class="section bg-neutral-50">
  <div class="container mx-auto">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">What Our Clients Say</h2>
      <div class="w-24 h-1 bg-primary-600 mx-auto mb-6"></div>
      <p class="text-xl text-neutral-700">
        We take pride in our client relationships and delivering solutions that make a real difference to their business.
      </p>
    </div>
    
    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div 
          class="card p-6 h-full flex flex-col"
          data-aos="fade-up" 
          data-aos-delay={index * 100}
        >
          <!-- Rating -->
          <div class="flex mb-4">
            {Array(testimonial.rating).fill(null).map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          
          <!-- Quote -->
          <blockquote class="text-neutral-700 mb-6 flex-grow">
            <svg class="h-8 w-8 text-neutral-300 mb-4" fill="currentColor" viewBox="0 0 32 32" aria-hidden="true">
              <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
            </svg>
            <p class="italic">{testimonial.quote}</p>
          </blockquote>
          
          <!-- Author -->
          <div class="flex items-center">
            <div class="flex-shrink-0 mr-4">
              <img 
                class="h-12 w-12 rounded-full object-cover" 
                src={testimonial.image} 
                alt={testimonial.author}
              />
            </div>
            <div>
              <p class="font-medium text-neutral-900">{testimonial.author}</p>
              <p class="text-sm text-neutral-600">{testimonial.position}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>